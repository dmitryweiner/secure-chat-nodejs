extends layout

block content
  div
    ul#mainTabs(class="nav nav-tabs" role="tablist")
      li(role="presentation" class="active")
        a(href="#login" aria-controls="login" role="tab" data-toggle="tab") Login / Register
      li(role="presentation")
        a(href="#contacts" aria-controls="contacts" role="tab" data-toggle="tab") Contacts
      li(role="presentation")
        a(href="#chats" aria-controls="chats" role="tab" data-toggle="tab") Chats

    .tab-content(style="padding-top:10px;")
      div(role="tabpanel" class="tab-pane active" id="login")
        include login

      div(role="tabpanel" class="tab-pane" id="contacts")
        include contacts

      div(role="tabpanel" class="tab-pane" id="chats")
        include messages
