div(style="max-width:400px")
  div(class="alert alert-warning fade in hidden" role="alert")
    span.alert-text

  form(id="addMessageForm")
    input#receiver(type="hidden" name="receiver")
    fieldset.form-group
      label(for="addMessage") Message to:&nbsp;
        span#receiverName
      textarea#addMessage(class="form-control" rows="5" style="width: 100%")
    button(type="submit" class="btn btn-default") Send

  ul.list-group(id="messageList" style="margin-top:10px")
